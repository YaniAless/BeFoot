<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">

    <ImageView
        android:id="@+id/logoTeam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_omm" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/placeTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nameTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameTeamDefault"
            android:textSize="15sp"
            android:layout_marginStart="20sp"/>

        <TextView
            android:id="@+id/nbPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nbPointsDefault"
            android:textSize="15dp"
            android:layout_marginStart="230sp"/>


    </RelativeLayout>
</LinearLayout>