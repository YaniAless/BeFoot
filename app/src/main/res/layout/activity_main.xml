<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchActivity">

    <TextView
        android:id="@+id/matchesDate"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="27dp"
        android:textAlignment="center"
        android:text="@string/title_matches"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="9dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" >

    </android.support.design.widget.BottomNavigationView>

    <ListView
        android:id="@+id/listMatches"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/matchesDate"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/matchesDate"
        tools:layout_editor_absoluteX="0dp"></ListView>


</RelativeLayout>